    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/source-code/src",
            "env": {
                "FLASK_APP": "source-code/src/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current Test",
            "type": "python",
            "request": "launch",
            "program": "source-code/test/test_parameter_change.py",
            "console": "integratedTerminal"
        }
    ]
}